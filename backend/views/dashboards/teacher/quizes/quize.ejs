<body>
		
		<!-- side navbar -->
    
        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <!-- row -->
				<div class="row">
					<div class="col-lg-12">
						<div class="card">
							<div class="card-body">
								<form action="/dashboard/teacher/course/new-course" method="post" enctype="multipart/form-data">
									<div class="quize-app">
                                        <div class="quize-info">
                                            <div class="quize-lesson">Lesson : <span>OOP</span></div>
                                            <div class="count">Number Of Questions : <span>3</span></div>
                                        </div>
                                        <div class="quize-area">
                                            <h2 class="quize-title">What is your age</h2>
                                        </div>
                                        <div class="answers-area">
                                            <div class="answer">
                                                <input type="radio" name="answer" id="answer_1">
                                                <label for="answer_1">18</label>
                                            </div>
                                            <div class="answer">
                                                <input type="radio" name="answer" id="answer_2">
                                                <label for="answer_2">12</label>
                                            </div>
                                            <div class="answer">
                                                <input type="radio" name="answer" id="answer_3">
                                                <label for="answer_3">13</label>
                                            </div>
                                            <div class="answer">
                                                <input type="radio" name="answer" id="answer_4">
                                                <label for="answer_4">15</label>
                                            </div>
                                        </div>
                                        <button class="submit-answer">Submit Answer</button>
                                        <div class="progress">
                                            <div class="points">
                                                <span></span>
                                                <span></span>
                                                <span></span>
                                                <span></span>
                                            </div>
                                            <div class="clock">
                                                <span class="timer">01:20:00</span>
                                            </div>
                                            <div class="results"></div>
                                        </div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
				
        </div>
    </div>


    <!-- Style -->

	<style>
        *{
            box-sizing: border-box;
        }
        body{
            font-family: Tahoma, Arial;
        }
        .quize-app{
            margin: 20px auto;
            padding: 15px;
            width: 800px;
            background-color: #f8f8f8;
        }
        .quize-app .quize-info{
            display: flex;
            background-color: #fff;
            padding: 20px;
        }
        .quize-app .quize-info .quize-lesson{
            flex: 1;
        }
        .quize-app .quize-info .count{
            flex: 1;
            text-align: right;
        }
        .quize-app .quize-area {
            background-color: #fff;
            padding: 20px;
            margin-top: 15px;
        }
        .quize-app .quize-area h2{
            margin: 0;
        }
        .quize-app .answers-area {
            background-color: #fff;
            padding: 0 20px 20px;
        }
        .quize-app .answers-area .answer{
            background-color: #f9f9f9;
            padding: 15px;
        }
        .quize-app .answers-area .answer:not(:last-child){
            border-bottom: 1px solid #dfdfdf;
        }
        .quize-app .answers-area .answer input[type="Radio"]:checked + label{
            color: #0075ff;
        }
        .quize-app .answers-area .answer label{
            cursor: pointer;
            color: #777;

        }
    </style>

    <!-- End Style -->
</body>
</html>