    <script>
        const lessons = document.querySelector('.lessons')
        function addLesson(){
            let i = 2;
            lessons.innerHTML += `
            <div class="form-group lesson1">
                                                        <div class="title">
                                                            <label for="lessonTitle1">Lesson's Title</label>
                                                            <input type="text" name="Title1" id="lessonTitle1" class="form-control">
