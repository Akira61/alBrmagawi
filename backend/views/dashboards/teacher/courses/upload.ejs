    <!-- upload files -->
    <script src="//static.filestackapi.com/filestack-js/3.x.x/filestack.min.js"></script>
    <script>
        let content;

        function uploadLesson(){
            const client = filestack.init('AzwJYFLAmRqmR2098Y7hlz');
            const options = {
                fromSources: ["local_file_system","url","googledrive", "dropbox", "onedrive"],
                onFileUploadFinished(file) {
                    content = file;
                    console.log(content)
                    document.querySelector(".uploaded-video").style.display = "block";
                    document.querySelector(".uploaded-video").src = file.url;
                    document.querySelector(".video-title").innerHTML = file.filename
                }
            };
           client.picker(options).open();

        }
    </script>

	<!-- Save data in sessionStorage -->
    <script>
        const submit = document.querySelector('#submit');
        const thumbnail = document.querySelector('.thumbnail');
        const title     = document.querySelector('.title');
        const about     = document.querySelector('.about');
        const viewable  = document.querySelector('#viewable')
        // send info to server before saving it to check if its correct
        //save
        thumbnail.onblur = ()=> window.sessionStorage.setItem('thumbnail', thumbnail.files[0]);
        title.onblur = ()=> window.sessionStorage.setItem('title', title.value);
        about.onblur = ()=> window.sessionStorage.setItem('about', about.value);


        // insert inputs value from local storage on page load
        window.addEventListener('load', ()=> {
            thumbnail.files[0] = sessionStorage.getItem('thumbnail') || '';
            title.value = sessionStorage.getItem('title') || '';
            about.value = sessionStorage.getItem('about') || '';
        });
        
    </script>
    <!-- show image -->
    <script>
        function show_image(event){
            document.getElementById('output_image').style.display='block';
            var reader = new FileReader();
                reader.onload = function(){
                var output = document.getElementById('output_image');
                output.src = reader.result;
                output.style.display = 'Block';
                output.style.borderRadius = '5px';
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>


    <!-- send data -->
    <script>
        // send data
        function sendData(){
            const formData = new FormData();
            
            formData.append('course_id', '<%- id %>')
            formData.append('content',content.url);
            formData.append('thumbnail',thumbnail.files[0])
            formData.append('section', '<%- section %>');
            formData.append('title', title.value);
            formData.append('description', about.value);
            formData.append('viewable', viewable.checked);
            console.log(formData)

            // fetch(content.url)
            // .then(res => res.blob())
            // .then(async video => {
            //     const file = new File([video], content.filename, {type : video.type});
            //      console.log(file)
            // });

            fetch('/dashboard/teacher/course/upload-course', {
                method : "POST",
                body : formData
            })
            .then(res => res.json())
            .then(data => {
                console.log(data);
                if(data.success){
                    // clear session
                    sessionStorage.clear();
                    window.location.href = '/dashboard/teacher/course/<%= course_id %>/sections'; 

                }
            });

        }

    </script>

