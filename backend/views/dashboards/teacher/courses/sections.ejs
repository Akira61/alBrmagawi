</head>
<body>
    <!-- side navbar -->
	<%- include('../../../components/teacherNavbar.ejs') %>

    <div class="content-body" style=" background-color: #262932;color: #fff;">
        <!-- row -->
        <div class="container-fluid">
                
            <div class="row page-titles mx-0" style="background-color: #262932;">
                <div class="col-sm-6 p-md-0">
                    <div class="welcome-text">
                        <h4 style="color: #fff;">Add Course</h4>
                    </div>
                </div>
                <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active"><a href="javascript:void(0);">Courses</a></li>
                        <li class="breadcrumb-item active"><a href="javascript:void(0);">Add Course</a></li>
                    </ol>
                </div>
            </div>
            
            <div class="">
                <div class="col-lg-12">

                    <% sections.forEach((section, i) => { %>
                        <div class="card" style="background-color: #262932;color: #fff;">
                            <div class="card-header" style="color: #fff;background-color: #454a59;">
                                <div class="section-title<%= i %>">
                                    <h3 style="color: #fff;"><%= section %></h3>
                                </div>
                                <div class="dropdown d-inline">
                                    <button class="btn btn-link " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: #fff;">
                                        <i class="fa-solid fa-ellipsis-vertical"></i>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                  <a class="dropdown-item" href="#" onclick="editSection('section-title<%= i %>', '<%= section %>','<%= i %>' )">Edit </a>
                                  <a class="dropdown-item" href="#">Delete</a>
                                </div>
                            </div>
                            </div>
                            <div class="newSection">
                                <ul class="list-group list-group-flush">
                                  <li class="list-group-item">
                                    <!-- section buttons -->
                                    <div class="form-group">
                                        <a href="/dashboard/teacher/course/<%= id %>/<%= section %>/upload-lesson" class="btn btn-link" style="color: #fff;"><i class="fa-solid fa-folder-plus mr-1"></i> New Lesson</a>
                                        <div class="dropdown d-inline">
                                            <button class="btn btn-link dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: #fff;">
                                                 <i class="fa-solid fa-pen-to-square"></i> Add Quiz
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                              <a class="dropdown-item" href="/dashboard/teacher/course/<%= id %>/<%= section %>/ForLesson/create-quiz">For a Lesson</a>
                                              <a class="dropdown-item" href="/dashboard/teacher/course/<%= id %>/<%= section %>/ForThisSection/create-quiz">For This Section</a>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- <div class="controls form-group my-3 col-lg-12 col-md-12 col-sm-12">
                                        <input type="submit" value="Save" class="btn btn-primary" onclick="newSection()">
                                        <input type="submit" value="Cancel" class="btn btn-primary">
                                    </div> -->
                                    <div class="lessons form-group">
                                        <% lessons.forEach(lesson => { %>
                                            <% if (lesson.section == section) { %>
                                                <div class="form-group">
                                                    <div>
                                                        <a href="/course/<%= course.course_id %>/<%= lesson.lesson_id %>" class="btn btn-link" style="color: #fff;"><%= lesson.title %></a>

                                                        <a href="/dashboard/teacher/course/<%= course.course_id %>/<%= lesson.lesson_id %>/edit-lesson" class="btn btn-info btn-sm float-right">Edit</a>
                                                    </div>
                                                </div>
                                                
                                            <% } %>
                                            <% }) %>

                                            <!-- <label for="">quiz</label>
                                            <% quizzes.forEach(quiz => { %>
                                             <% if (quiz.section_quiz && quiz.section == section) { %>
                                              <div class="form-group">
                                                <a href=<%=quiz.path %> > <%= quiz.question %> </a>
                                              </div>
                                             <% } else{%>
                                                No Quiz
                                             <%} %>
                                            <% }) %> -->
                                    </div>
                                </li>
                                </ul>
                            </div>
                          </div>
                    <% }) %>

                    <div class="card" style="background-color: #262932;">
                        <div class="card-header" style="color: #fff;background-color: #454a59;">
                          New Section
                        </div>
                        <div class="newSection">
                            <ul class="list-group list-group-flush">
                              <li class="list-group-item">
                                <div class="form-group">
                                    <input type="text" id="newSectionInput" class="form-control" placeholder="section name" placeholder="section name" style="background-color: #262932;color: #fff; border: 1px solid #383c46;">
                                </div>
                                <div class="controls form-group my-3 col-lg-12 col-md-12 col-sm-12">
                                    <input type="submit" value="Save" class="btn btn-primary" onclick="newSection()">
                                    <!-- <input type="submit" value="Cancel" class="btn btn-primary"> -->
                                </div>
                            </li>
                            </ul>
                        </div>
                      </div>
                </div>
            </div>
            
        </div>
    </div>
    <!--**********************************
        Content body end
    ***********************************-->


    <!--**********************************
        Footer start
    ***********************************-->
