    <script>
        // new section
        async function newSection(){
            const input = document.querySelector('#newSectionInput').value;

            console.log(input)
            const res = await fetch('/dashboard/teacher/course/<%- id %>/new-section', {
                method : 'POST',
                headers : {'Content-Type': 'application/json'},
                body : JSON.stringify({section : input})  
            })
            const data = await res.json();
            console.log(data)
            
        }
    </script>

    <script>
        function editSection(refrence, previoseTitle, i){
            const sectionTitle = document.querySelector('.'+ refrence);
            const inputID = `sectionTitle${i}`;
            sectionTitle.innerHTML = `
            <div class="form-inline">
                <input id=${inputID} type="text" class="mp-2 sectionTitle" value="${previoseTitle}"/>
                <a class="btn btn-outline-info saveSectionUpdate" onclick="updateSection('${previoseTitle}', '${inputID}')">Save</a>
                <a class="btn btn-outline-info" href="#" onclick="cancelSectionUpdate('${previoseTitle}','${refrence}')">Cancel</a>
            </div>

            `
        }

        function updateSection(previoseSection, inputID){
            const data = {
                section :previoseSection,
                newSection : document.querySelector('#'+inputID).value
            }
            console.log(data);
            fetch(`/dashboard/teacher/course/<%- id %>/sections/update-section/`,{
                method : 'PUT',
                headers : {'Content-Type': 'application/json'},
                body : JSON.stringify(data)
            })
        }

        function cancelSectionUpdate(value, refrence){
            const sectionTitle = document.querySelector('.'+ refrence)
            sectionTitle.innerHTML = `<h3 style="color: #fff;">${value}</h3>`;
        }
    </script>

